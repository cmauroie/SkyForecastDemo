        <ImageView
            android:id="@+id/icon_day"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/temp_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
